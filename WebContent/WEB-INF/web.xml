<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	
	<listener>
    	<listener-class>com.avl.yamsnew.config.DaoFactoryInit</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>GameServlet</servlet-name>
		<servlet-class>com.avl.yamsnew.servlets.GameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GameServlet</servlet-name>
		<url-pattern>/game</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>MenuServlet</servlet-name>
		<servlet-class>com.avl.yamsnew.servlets.MenuServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MenuServlet</servlet-name>
		<url-pattern>/menu</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.avl.yamsnew.servlets.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.avl.yamsnew.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<jsp-config>
	    <jsp-property-group>
	        <url-pattern>*.jsp</url-pattern>
	        <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
	    </jsp-property-group>
	</jsp-config>
</web-app>